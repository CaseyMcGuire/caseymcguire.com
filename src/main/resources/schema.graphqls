type Mutation {
  create_or_edit_post(content: String!, id: Int, title: String!): Int
  register(email: String!, password: String!): Boolean!
}

type Post {
  contents: String!
  id: Int!
  published_date: String!
  title: String!
}

type Query {
  current_user: User
  post(id: Int!): Post
  posts(page: Int!): [Post!]!
}

type User {
  email: String!
  id: Int!
  is_admin: Boolean!
  role: String
}
